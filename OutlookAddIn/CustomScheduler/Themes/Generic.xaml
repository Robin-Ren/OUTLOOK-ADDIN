    <Style TargetType="{x:Type customScheduler:Calendar}">
        <Setter Property="ContextMenu" Value="{StaticResource ctxmnu}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type customScheduler:Calendar}">
                    <Border Background="#373839"
                            BorderBrush="White"
                            BorderThickness="2,2,2,2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="120" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="38" />
                                <RowDefinition Height="22" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="5,0,0,0">
                                <Button DockPanel.Dock="Left"
                            Style="{StaticResource MaterialDesignToolForegroundButton}"
                                        Foreground="White"
                            Command="{x:Static customScheduler:Calendar.PreviousDay}"
                            HorizontalAlignment="Right">
                                    <materialDesign:PackIcon Kind="ArrowLeft" HorizontalAlignment="Left"  />
                                </Button>

                                <Button DockPanel.Dock="Left"
                            Style="{StaticResource MaterialDesignToolForegroundButton}"
                                        Foreground="White"
                            Command="{x:Static customScheduler:Calendar.NextDay}"
                            HorizontalAlignment="Right">
                                    <materialDesign:PackIcon Kind="ArrowRight" HorizontalAlignment="Right" />
                                </Button>

                                <Button DockPanel.Dock="Right"
                            Style="{StaticResource MaterialDesignToolForegroundButton}"
                                        Foreground="White"
                            Command="{x:Static customScheduler:Calendar.CloseDialog}"
                            HorizontalAlignment="Right">
                                    <materialDesign:PackIcon Kind="Close" HorizontalAlignment="Right" />
                                </Button>
                            </StackPanel>
                            <Border BorderBrush="#CE881B" BorderThickness="0,0,1,1" Grid.Column="0" Grid.Row="1" />
                            <Border BorderBrush="#CE881B" BorderThickness="1,1,1,1" Background="White" Grid.Column="1" Grid.Row="1">
                                <TextBlock Text="{TemplateBinding CurrentDate}" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="dayHeader1" FontWeight="Bold" />
                            </Border>
                            <Border BorderBrush="#CE881B" BorderThickness="1,1,1,1" Background="White" Grid.Column="2" Grid.Row="1">
                                <TextBlock Text="{TemplateBinding CurrentDate}" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="dayHeader2" FontWeight="Bold"/>
                            </Border>
                            <Border BorderBrush="#CE881B" BorderThickness="1,1,1,1" Background="White" Grid.Column="3" Grid.Row="1">
                                <TextBlock Text="{TemplateBinding CurrentDate}" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="dayHeader3" FontWeight="Bold"/>
                            </Border>
                            <Border BorderBrush="#CE881B" BorderThickness="1,1,1,1" Background="White" Grid.Column="4" Grid.Row="1">
                                <TextBlock Text="{TemplateBinding CurrentDate}" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="dayHeader4" FontWeight="Bold"/>
                            </Border>
                            <Border BorderBrush="#CE881B" BorderThickness="1,1,1,1" Background="White" Grid.Column="5" Grid.Row="1">
                                <TextBlock Text="{TemplateBinding CurrentDate}" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="dayHeader5" FontWeight="Bold"/>
                            </Border>
                            <Border BorderBrush="#CE881B" BorderThickness="1,1,1,1" Background="White" Grid.Column="6" Grid.Row="1">
                                <TextBlock Text="{TemplateBinding CurrentDate}" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="dayHeader6" FontWeight="Bold"/>
                            </Border>
                            <Border BorderBrush="#CE881B" BorderThickness="1,1,1,1" Background="White" Grid.Column="7" Grid.Row="1">
                                <TextBlock Text="{TemplateBinding CurrentDate}" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="dayHeader7" FontWeight="Bold"/>
                            </Border>
                            <ScrollViewer Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="120" />
                                    </Grid.ColumnDefinitions>

                                    <customScheduler:CalendarLedger Grid.Column="0" />
                                    <customScheduler:CalendarDay Grid.Column="1" x:Name="day1" BorderBrush="White" Day="{Binding Day}" BorderThickness="1,1,1,1"/>
                                    <customScheduler:CalendarDay Grid.Column="2" x:Name="day2" BorderBrush="White" BorderThickness="1,1,1,1"/>
                                    <customScheduler:CalendarDay Grid.Column="3" x:Name="day3" BorderBrush="White" BorderThickness="1,1,1,1"/>
                                    <customScheduler:CalendarDay Grid.Column="4" x:Name="day4" BorderBrush="White" BorderThickness="1,1,1,1"/>
                                    <customScheduler:CalendarDay Grid.Column="5" x:Name="day5" BorderBrush="White" BorderThickness="1,1,1,1"/>
                                    <customScheduler:CalendarDay Grid.Column="6" x:Name="day6" BorderBrush="White" BorderThickness="1,1,1,1"/>
                                    <customScheduler:CalendarDay Grid.Column="7" x:Name="day7" BorderBrush="White" BorderThickness="1,1,1,1"/>
                                </Grid>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type customScheduler:CalendarAppointmentItem}">
        <Setter Property="StartTime" Value="{Binding StartTime}" />
        <Setter Property="EndTime" Value="{Binding EndTime}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type customScheduler:CalendarAppointmentItem}">
                    <Border CornerRadius="2" BorderThickness="1,1,1,1" BorderBrush="#373839" Background="#EACF88" Margin="1,1,1,1" Padding="3,1.5,0,1.5">
                        <Border.Effect>
                            <DropShadowEffect Opacity="0.5" />
                        </Border.Effect>
                        <ContentPresenter />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
